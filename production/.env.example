# Docker 이미지 설정
DOCKER_USERNAME=your_dockerhub_username
DOCKER_IMAGE_NAME=kkambbaki-backend
DOCKER_IMAGE_TAG=production

# Django 설정
SECRET_KEY=your-secret-key-here-change-this-in-production
SECRET_SIGNING_KEY=your-signing-key-here-change-this-in-production
DEBUG=False
ALLOWED_HOSTS=kkambbaki.singun11.wtf,www.kkambbaki.singun11.wtf,your-ec2-ip,localhost
SECURE_SSL_REDIRECT=False  # SSL 인증서 설정 후 True로 변경

# PostgreSQL 설정 (EC2 내부 PostgreSQL)
# host 네트워크 모드 사용으로 localhost로 접근 가능
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_DB=kkambbaki_prod
POSTGRES_USER=kkambbaki_prod
POSTGRES_PASSWORD=your-secure-database-password

# Redis 설정
# host 네트워크 모드 사용으로 localhost로 접근 가능
REDIS_HOST=localhost
REDIS_PORT=6379

# Celery 설정
CELERY_BROKER_URL=redis://localhost:6379/0
CELERY_RESULT_BACKEND=django-db

# AWS S3 설정 (선택사항 - 사용하지 않음, 로컬 파일 시스템 사용)
# USE_S3=False
# AWS_ACCESS_KEY_ID=your-aws-access-key-id
# AWS_SECRET_ACCESS_KEY=your-aws-secret-access-key
# AWS_STORAGE_BUCKET_NAME=your-s3-bucket-name
# AWS_S3_REGION_NAME=ap-northeast-2

# CORS 설정
# 프로덕션 프론트엔드 도메인을 추가하세요
# CORS_ALLOWED_ORIGINS는 Django settings에서 리스트로 관리됩니다

# Email 설정 (선택사항)
# EMAIL_BACKEND=django.core.mail.backends.smtp.EmailBackend
# EMAIL_HOST=smtp.gmail.com
# EMAIL_PORT=587
# EMAIL_USE_TLS=True
# EMAIL_HOST_USER=your-email@gmail.com
# EMAIL_HOST_PASSWORD=your-email-password

# Sentry 설정 (에러 모니터링, 선택사항)
# SENTRY_DSN=your-sentry-dsn

# 기타 설정
DJANGO_SETTINGS_MODULE=config.settings.production
